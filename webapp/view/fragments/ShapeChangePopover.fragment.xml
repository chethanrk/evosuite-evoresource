<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<ResponsivePopover id="isPopoverChangeSHape" class="sapUiContentPadding" showHeader="false" placement="{viewModel>/gantt/popoverPlacement}"
		contentWidth="30%" contentHeight="auto">
		<content>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|Before"/>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|Instead">
				<f:SimpleForm id="idFormChangeShape" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
					labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
					singleContainerFullSize="true" visible="{= ${ganttPlanningModel>/tempData/popover/isEditable}}">
					<f:content>
						<Label text="{i18n>xfld.popoverType}"/>
						<Select forceSelection="true" selectedKey="{ganttPlanningModel>/tempData/popover/NODE_TYPE}"
							editable="{parts:[{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>/tempData/popover/isTemporary'}],formatter:'.formatter.setAssignmentTypeEditable'}"
							change="onChangeAssignmentType">
							<core:Item key="RES_GROUP" text="{i18n>xtxt.group}"/>
							<core:Item key="SHIFT" text="{i18n>xtxt.shift}"/>
						</Select>
						<Label text="{i18n>xfld.popoverSelect}" required="true"/>
						<ComboBox id="idResourceGroupGroup" required="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'RES_GROUP'}"
							showSecondaryValues="true" name="ResourceGroupGuid" fieldGroupIds="changeShapeInput"
							items="{ path: 'viewModel>/ResourceGroup', sorter: { path: 'ResourceGroupDesc' }}"
							selectedKey="{ganttPlanningModel>/tempData/popover/ResourceGroupGuid}" change="onChangeResourceGroup"
							visible="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'RES_GROUP'}">
							<core:ListItem key="{viewModel>ResourceGroupGuid}" text="{viewModel>ResourceGroupDesc}" additionalText="{viewModel>ResourceGroupUnitId}"/>
						</ComboBox>
						<ComboBox id="idShift" required="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'SHIFT'}" showSecondaryValues="true" name="Shift"
							fieldGroupIds="changeShapeInput" items="{ path: 'viewModel>/Shifts'}"
							selectedKey="{parts:[{path:'ganttPlanningModel>/tempData/popover/ScheduleId'},{path:'ganttPlanningModel>/tempData/popover/TemplateId'}],formatter:'.formatter.getShiftKey'}"
							change="onChangeShift" visible="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'SHIFT'}">
							<core:ListItem key="{parts:[{path:'viewModel>ScheduleId'},{path:'viewModel>TemplateId'}],formatter:'.formatter.getShiftKey'}"
								text="{viewModel>TemplateDesc}" additionalText="{viewModel>TemplateId}"/>
						</ComboBox>
						<Label text="{i18n>xfld.popoverDateRange}" required="true"/>
						<DateRangeSelection required="true" name="DateFrom" fieldGroupIds="changeShapeInput" change="onChangeDate"
							dateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/StartDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
							secondDateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/EndDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
							minDate="{path:'ganttPlanningModel>/tempData/popover/minDate'}"/>
						<Label text="{i18n>xfld.Repeat}"/>
						<Select id="idRepeatMode" forceSelection="true" change="onChangeRepeatMode" selectedKey="{ganttPlanningModel>/tempData/popover/Repeat}"
							visible="{= ${ganttPlanningModel>/tempData/popover/isTemporary} ? true : false}" fieldGroupIds="changeShapeInput">
							<core:Item key="NEVER" text="{i18n>xfld.Never}"/>
							<core:Item key="DAY" text="{i18n>lbl.daily}"/>
							<core:Item key="WEEK" text="{i18n>lbl.weekly}"/>
							<core:Item key="MONTH" text="{i18n>lbl.monthly}"/>
						</Select>
						<Label text="{i18n>xfld.Every}" required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.requiredValidate'}"/>
						<Input type="Number" description="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.repaetModeDescription'}"
							visible="{parts:[{path:'ganttPlanningModel>/tempData/popover/Repeat'},{path:'ganttPlanningModel>/tempData/popover/isTemporary'}],formatter:'.formatter.everyAndEndDateVisibility'}"
							value="{ganttPlanningModel>/tempData/popover/Every}"
							required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.requiredValidate'}" fieldGroupIds="changeShapeInput"
							liveChange="onEveryLiveChange"/>
						<Label text="{i18n>xfld.On}" required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.weekModeValidation'}"/>
						<MultiComboBox maxWidth="100%" selectedKeys="{ganttPlanningModel>/tempData/popover/Days}"
							visible="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.weekModeValidation'}" fieldGroupIds="changeShapeInput"
							required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.weekModeValidation'}"
							selectionChange="onChangeDaySelection">
							<core:Item key="0" text="{i18n>xlbl.Sun}"/>
							<core:Item key="1" text="{i18n>xlbl.Mon}"/>
							<core:Item key="2" text="{i18n>xlbl.Tue}"/>
							<core:Item key="3" text="{i18n>xlbl.Wed}"/>
							<core:Item key="4" text="{i18n>xlbl.Thu}"/>
							<core:Item key="5" text="{i18n>xlbl.Fri}"/>
							<core:Item key="6" text="{i18n>xlbl.Sat}"/>
						</MultiComboBox>
						<Label text="{i18n>xfld.On}" required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.monthModeValidation'}"/>
						<RadioButtonGroup id="rbg1" selectedIndex="{ganttPlanningModel>/tempData/popover/On}" class="sapUiMediumMarginBottom"
							visible="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.monthModeValidation'}" fieldGroupIds="changeShapeInput">
							<RadioButton text="{path:'ganttPlanningModel>/tempData/popover',formatter:'.formatter.getDay'}"/>
							<RadioButton text="{path:'ganttPlanningModel>/tempData/popover',formatter:'.formatter.getDays'}"/>
						</RadioButtonGroup>
						<Label text="{i18n>xfld.EndDate}" required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.requiredValidate'}"/>
						<DatePicker id="idDatePicker" fieldGroupIds="changeShapeInput" dateValue="{ganttPlanningModel>/tempData/popover/RepeatEndDate}"
							minDate="{ganttPlanningModel>/tempData/popover/minDate}"
							required="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.requiredValidate'}"
							visible="{parts:[{path:'ganttPlanningModel>/tempData/popover/Repeat'},{path:'ganttPlanningModel>/tempData/popover/isTemporary'}],formatter:'.formatter.everyAndEndDateVisibility'}"/>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm id="idFormDisplayShape" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
					labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
					singleContainerFullSize="true" visible="{= !${ganttPlanningModel>/tempData/popover/isEditable}}">
					<Label text="{i18n>xfld.popoverType}"/>
					<Select forceSelection="true" selectedKey="{ganttPlanningModel>/tempData/popover/NODE_TYPE}" editable="false">
						<core:Item key="RES_GROUP" text="{i18n>xtxt.group}"/>
						<core:Item key="SHIFT" text="{i18n>xtxt.shift}"/>
					</Select>
					<Label text="{i18n>xfld.description}"/>
					<ComboBox items="{ path: 'viewModel>/ResourceGroup', sorter: { path: 'ResourceGroupDesc' }}"
						selectedKey="{ganttPlanningModel>/tempData/popover/ResourceGroupGuid}"
						visible="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'RES_GROUP'}" editable="false">
						<core:ListItem key="{viewModel>ResourceGroupGuid}" text="{viewModel>ResourceGroupDesc}" additionalText="{viewModel>ResourceGroupUnitId}"/>
					</ComboBox>
					<ComboBox items="{ path: 'viewModel>/Shifts'}"
						selectedKey="{parts:[{path:'ganttPlanningModel>/tempData/popover/ScheduleId'},{path:'ganttPlanningModel>/tempData/popover/TemplateId'}],formatter:'.formatter.getShiftKey'}"
						visible="{= ${ganttPlanningModel>/tempData/popover/NODE_TYPE} === 'SHIFT'}" editable="false">
						<core:ListItem key="{parts:[{path:'viewModel>ScheduleId'},{path:'viewModel>TemplateId'}],formatter:'.formatter.getShiftKey'}"
							text="{viewModel>ScheduleIdDesc}" additionalText="{viewModel>ScheduleId}"/>
					</ComboBox>
					<Label text="{i18n>xfld.popoverDateRange}" required="true"/>
					<DateRangeSelection
						dateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/StartDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
						secondDateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/EndDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
						editable="false"/>
				</f:SimpleForm>
			</core:ExtensionPoint>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|After"/>
		</content>
		<beginButton>
			<Button text="{i18n>xbtn.delete}" press="onPressDeleteAssignment" visible="{= ${ganttPlanningModel>/tempData/popover/isEditable}}"/>
		</beginButton>
		<endButton>
			<Button type="Emphasized" text="{i18n>xbtn.ok}" press="onPressChangeAssignment" visible="{= ${ganttPlanningModel>/tempData/popover/isEditable}}"/>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>