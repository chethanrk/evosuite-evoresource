<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<ResponsivePopover id="isPopoverChangeSHape" class="sapUiContentPadding" showHeader="false" placement="{viewModel>/gantt/popoverPlacement}"
		contentWidth="30%">
		<content>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|Before"/>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|Instead">
				<f:SimpleForm id="idFormChangeShape" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
					labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
					singleContainerFullSize="true">
					<f:content>
						<Label text="{i18n>xfld.popoverType}"/>
						<Select forceSelection="true" selectedKey="{ganttPlanningModel>/tempData/popover/AssignmentType}" editable="false">
							<core:Item key="GROUP" text="{i18n>xtxt.group}"/>
						</Select>
						<Label text="{i18n>xfld.popoverSelect}" required="true"/>
						<ComboBox id="idResourceGroupGroup" required="true" showSecondaryValues="true" name="ResourceGroupGuid" fieldGroupIds="changeShapeInput"
							items="{ path: 'viewModel>/ResourceGroup', sorter: { path: 'ResourceGroupDesc' }}"
							selectedKey="{ganttPlanningModel>/tempData/popover/ResourceGroupGuid}" change="onChangeResourceGroup">
							<core:ListItem key="{viewModel>ResourceGroupGuid}" text="{viewModel>ResourceGroupDesc}" additionalText="{viewModel>ResourceGroupUnitId}"/>
						</ComboBox>
						<Label text="{i18n>xfld.popoverDateRange}" required="true"/>
						<DateRangeSelection required="true" name="DateFrom" fieldGroupIds="changeShapeInput" change="onChangeDate"
							dateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/StartDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
							secondDateValue="{parts:[{path:'ganttPlanningModel>/tempData/popover/EndDate'},{path:'ganttPlanningModel>/tempData/popover/isNew'},{path:'ganttPlanningModel>isChanging'}],formatter:'.formatter.convertFromUTCDate'}"
							minDate="{path:'ganttPlanningModel>/tempData/popover/minDate'}"/>
						<Label text="Repeat"/>
						<Select id="idRepeatMode" forceSelection="true" change="onChangeRepeatMode" selectedKey="{ganttPlanningModel>/tempData/popover/Repeat}"
							visible="{= ${ganttPlanningModel>/tempData/popover/isTemporary} ? true : false}" fieldGroupIds="changeShapeInput">
							<core:Item key="NEVER" text="Never"/>
							<core:Item key="DAY" text="{i18n>lbl.daily}"/>
							<core:Item key="WEEK" text="{i18n>lbl.weekly}"/>
							<core:Item key="MONTH" text="{i18n>lbl.monthly}"/>
						</Select>
						<Label text="Every" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER'}"/>
						<Input type="Number" description="{path:'ganttPlanningModel>/tempData/popover/Repeat',formatter:'.formatter.repaetModeDescription'}"
							visible="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER' ? ${ganttPlanningModel>/tempData/popover/isTemporary} ? true : false : false}"
							value="{ganttPlanningModel>/tempData/popover/Every}" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER'}"
							fieldGroupIds="changeShapeInput" liveChange="onEveryLiveChange"/>
						<Label text="On" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} === 'WEEK'}"/>
						<MultiComboBox maxWidth="100%" selectedKeys="{ganttPlanningModel>/tempData/popover/Days}"
							visible="{= ${ganttPlanningModel>/tempData/popover/Repeat} === 'WEEK'}" fieldGroupIds="changeShapeInput"
							required="{= ${ganttPlanningModel>/tempData/popover/Repeat} === 'WEEK'}" selectionChange="onChangeDaySelection">
							<core:Item key="Sunday" text="Sunday"/>
							<core:Item key="Monday" text="Monday"/>
							<core:Item key="Tuesday" text="Tuesday"/>
							<core:Item key="Wednesday" text="Wednesday"/>
							<core:Item key="Thursday" text="Thursday"/>
							<core:Item key="Friday" text="Friday"/>
							<core:Item key="Saturday" text="Saturday"/>
						</MultiComboBox>
						<Label text="On" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} === 'MONTH'}"/>
						<RadioButtonGroup id="rbg1" selectedIndex="{ganttPlanningModel>/tempData/popover/On}" class="sapUiMediumMarginBottom"
							visible="{= ${ganttPlanningModel>/tempData/popover/Repeat} === 'MONTH'}" fieldGroupIds="changeShapeInput">
							<RadioButton text="{path:'ganttPlanningModel>/tempData/popover',formatter:'.formatter.getDay'}"/>
							<RadioButton text="{path:'ganttPlanningModel>/tempData/popover',formatter:'.formatter.getDays'}"/>
						</RadioButtonGroup>
						<Label text="End Date" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER'}"/>
						<DatePicker id="idDatePicker" fieldGroupIds="changeShapeInput" dateValue="{ganttPlanningModel>/tempData/popover/RepeatEndDate}"
							minDate="{ganttPlanningModel>/tempData/popover/minDate}" required="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER'}"
							visible="{= ${ganttPlanningModel>/tempData/popover/Repeat} !== 'NEVER' ? ${ganttPlanningModel>/tempData/popover/isTemporary} ? true : false : false}"/>
					</f:content>
				</f:SimpleForm>
			</core:ExtensionPoint>
			<core:ExtensionPoint name="DialogExtP|ShapeChangePopover|Content|After"/>
		</content>
		<beginButton>
			<Button text="{i18n>xbtn.delete}" press="onPressDeleteAssignment" visible="true"/>
		</beginButton>
		<endButton>
			<Button type="Emphasized" text="{i18n>xbtn.ok}" press="onPressChangeAssignment"/>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>