<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="{i18n>xtit.demands}" resizable="true" draggable="true" contentWidth="70%">
		<Table id="idFragDemandListTable" items="{ path: 'demandModel>/data' }" mode="MultiSelect" selectionChange="onDemandSelectionChange">
			<!--mode="MultiSelect" selectionChange="onDemandSelectionChange"-->
			<!--<infoToolbar>
				<OverflowToolbar design="Info" active="true">
					<Label text="Edit/Delete operation is not possible because the bellow demands are assigned to the selected assignment"/>
				</OverflowToolbar>
			</infoToolbar>-->
			<columns>
				<Column demandPopin="true">
					<Text text="{i18n>xtit.demands}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.fromdate}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.todate}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="Status"/>
				</Column>
				<Column demandPopin="true" hAlign="Right">
					<Text text=""/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{demandModel>DemandDesc}"/>
						<Text text="{path:'demandModel>DateFrom',formatter:'.formatter.dateWithTime'}"/>
						<Text text="{path:'demandModel>DateTo',formatter:'.formatter.dateWithTime'}"/>
						<Text text="{demandModel>Status}"/>
						<Button icon="sap-icon://detail-view" tooltip="{i18n>lbl.showDemand}" press="onShowDemandPress"
								visible="{= ${demandModel>AllowUnassign} === true ? false : true}"/>
						<!--<FlexBox justifyContent="End">
							<Button icon="sap-icon://detail-view" tooltip="{i18n>lbl.showDemand}" press="onShowDemandPress"
								visible="{= ${demandModel>AllowUnassign} === true ? false : true}"/>
							<Button icon="sap-icon://broken-link" tooltip="Unassign" press="onShowDemandPress"
								visible="{= ${demandModel>AllowUnassign} === true ? true : false}"/>
						</FlexBox>-->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<beginButton>
			<Button text="Procced" press="onDemandUnassign" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>btn.close}" press="onDemandDialogClose" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>