<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="{i18n>xtit.settings}" contentWidth="20%" resizable="true" type="Message">
		<content>
			<FlexBox direction="Column">
				<CheckBox text="{i18n>xlbl.showBlocker}" selected="{user>/ENABLE_SHOW_BLOCKER}"/>
				<CheckBox text="{i18n>xlbl.showAvailibility}" selected="{user>/ENABLE_SHOW_AVAILABILITY}" />
				<CheckBox text="{i18n>xlbl.showAbsences}" selected="{user>/ENABLE_SHOW_ABSENCE}" />
				<CheckBox text="{i18n>xlbl.showShift}" selected="{user>/ENABLE_SHOW_SHIFT}" />
				<CheckBox text="{i18n>xlbl.showGroup}" selected="{user>/ENABLE_SHOW_GROUP}" />
			</FlexBox>
		</content>
		<endButton>
			<Button text = "{i18n>xbtn.ok}" press="onFilterGantt"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>