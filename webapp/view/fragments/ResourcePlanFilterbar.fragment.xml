<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
	<smartFilterBar:SmartFilterBar id="idPageResourcePlanningSmartFilterBar" entitySet="GanttResourceHierarchySetarchySet"
		useDateRangeType="true" persistencyKey="com.evorait.evosuite.evoresource.GanttFilterbar" initialized="onInitializedSmartVariant"
		search="onSearch">
		<!-- layout data used to make the table growing but the filter bar fixed -->
		<smartFilterBar:layoutData>
			<FlexItemData shrinkFactor="0"/>
		</smartFilterBar:layoutData>
		<smartFilterBar:controlConfiguration>
			<smartFilterBar:ControlConfiguration mandatory="mandatory" key="StartDate" groupId="_BASIC">
				<smartFilterBar:customControl>
					<DateRangeSelection id="idFilterGanttPlanningDateRange" dateValue="{viewModel>/gantt/defaultStartDate}"
						secondDateValue="{viewModel>/gantt/defaultEndDate}" enabled="true"/>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<smartFilterBar:ControlConfiguration mandatory="mandatory" key="Mode" groupId="_BASIC">
				<smartFilterBar:customControl>
					<Select id="idFilterGanttPlanningMode" forceSelection="true" change="onChangeTimeMode"
						items="{ path: '/GanttViewSet', sorter: { path: 'Key' } }">
						<core:Item key="{Key}" text="{Description}"/>
					</Select>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<core:ExtensionPoint name="FilterExtP|ResourcePlanGantt|GanttResourceHierarchySet|ControlConfiguration"/>
		</smartFilterBar:controlConfiguration>
		<smartFilterBar:groupConfiguration>
			<core:ExtensionPoint name="FilterExtP|ResourcePlanGantt|GanttResourceHierarchySet|GroupConfiguration"/>
		</smartFilterBar:groupConfiguration>
	</smartFilterBar:SmartFilterBar>
</core:FragmentDefinition>