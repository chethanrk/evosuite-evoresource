<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>xtit.deletingAssignmentlist}" resizable="true" draggable="true" contentWidth="30%">
		<Table items="{ path: 'multiDeleteModel>/finalDeleteList',sorter : [{ path : 'ResourceName', group:true  }] }">
			<columns>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.description}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.type}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.fromdate}"/>
				</Column>
				<Column demandPopin="true">
					<Text text="{i18n>lbl.todate}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{multiDeleteModel>DESCRIPTION}"/>
						<Text text="{path:'multiDeleteModel>NODE_TYPE',formatter:'.formatter.getAssignmentTypeText'}"/>
						<Text text="{parts:[{path:'multiDeleteModel>NODE_TYPE'},{path:'multiDeleteModel>StartDate'},{path:'multiDeleteModel>EffectiveStartDate'},{path:'multiDeleteModel>isNew'},{path:'multiDeleteModel>isChanging'}],formatter:'.formatter.getDeleteObjectDate'}"/>
						<Text text="{parts:[{path:'multiDeleteModel>NODE_TYPE'},{path:'multiDeleteModel>EndDate'},{path:'multiDeleteModel>EffectiveEndDate'},{path:'multiDeleteModel>isNew'},{path:'multiDeleteModel>isChanging'}],formatter:'.formatter.getDeleteObjectDate'}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<beginButton>
			<Button text="{i18n>btn.deleteAll}" press="onDeleteAllAssignment" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>btn.close}" press="onDeleteAssignmentDialogClose" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>