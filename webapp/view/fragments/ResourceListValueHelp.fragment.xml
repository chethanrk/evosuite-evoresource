<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="{i18n>xtit.resourceList}"
		class="sapUiPopupWithPadding"
		items="{viewModel>/Resources}"
		search="handleResourceValueHelpSearch"
		liveChange="handleResourceValueHelpSearch"
		confirm="handleResourceValueHelpClose"
		cancel="handleResourceValueHelpClose"
		multiSelect="true">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{viewModel>FIRSTNAME} {viewModel>LASTNAME}"
			description="{viewModel>PERNR}" />
	</SelectDialog>
</core:FragmentDefinition>